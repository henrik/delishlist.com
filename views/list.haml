%dl
  - @list.items.each do |item|
    %dt{ title_attributes(item) }
      = link_to(h(item.title), referralize(item.url), :class => "title")
      = item.rating
    %dd
      %p.description=h item.description
      %p.meta
        %span.date= item.added
        %span.tags
          - if item.tags.any?
            tagged
            =h item.tags.to_a.join(', ')
    
    - # To track when we come to a new rating in rendering the list.
    - @last_rating = item.rating
